generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Expense {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  amount    Float
  createdAt DateTime  @default(now())
  createdBy String
  updatedAt DateTime?
  updatedBy String?
  payerId   String
  debtorIds String[]
  isActive  Boolean   @default(true)
  groupId   String    @db.ObjectId
  group     Group     @relation(fields: [groupId], references: [groupId])
}

model Group {
  groupId     String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  lineGroupId String?
  members     String[]
  Expense     Expense[]
  createdAt   DateTime  @default(now())
  isActive    Boolean   @default(true)
}

model User {
  userId      String @id
  displayName String
  pictureUrl  String?
}